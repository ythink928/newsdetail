<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/normal_bg">


  <WebView
      android:id="@+id/root_webview"
      android:layout_width="match_parent"
      android:layout_height="10dp"/>

  <TextView
      android:id="@+id/tv_source"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:layout_marginEnd="15dp"
      android:textColor="@color/c1_alpha20"
      android:textSize="12sp"
      android:text="本文来源Bilibili"/>

  <!--评论-->

  <TextView
      android:layout_width="120dp"
      android:layout_height="17dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="48dp"
      android:text="分享好友共赏精彩内容"
      android:textColor="#ffffffff"
      android:textSize="12sp"/>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="52dp"
      android:layout_marginTop="20dp"
      android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_share_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_essay_share_circle"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_share_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_essay_share_wechat"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_share_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_essay_share_qq"/>

    <ImageView
        android:id="@+id/iv_share_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_essay_share_space"/>
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginEnd="15dp"
      android:layout_marginStart="15dp"
      android:background="#19ffffff"/>

  <TextView
      android:id="@+id/tv_comment_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="15dp"
      android:text="评论"
      android:textColor="#ffffffff"
      android:textSize="14sp"/>


</LinearLayout>